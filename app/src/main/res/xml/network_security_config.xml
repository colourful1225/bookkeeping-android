<?xml version="1.0" encoding="utf-8"?>
<!--
  网络安全配置。
  目的：允许 debug 包访问 http:// 明文流量（本地测试服务器），
  release 包默认只允许 https。
-->
<network-security-config>

    <!-- release：只信任系统 CA，不允许明文 -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

</network-security-config>
